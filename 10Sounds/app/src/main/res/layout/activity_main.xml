<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/akashi_image"
        android:layout_width="0dp"
        android:layout_height="254dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="97dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/glass_image"
        app:layout_constraintEnd_toStartOf="@+id/glock_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/glass_image"
        app:srcCompat="@drawable/akashi1" />

    <ImageView
        android:id="@+id/glass_image"
        android:layout_width="0dp"
        android:layout_height="422dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="375dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/glock_image"
        app:layout_constraintStart_toEndOf="@+id/akashi_image"
        app:srcCompat="@drawable/broken_glass" />

    <ImageView
        android:id="@+id/explosion_image"
        android:layout_width="0dp"
        android:layout_height="447dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="81dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/glock_image"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/exlposion" />

    <ImageView
        android:id="@+id/glock_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="54dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/explosion_image"
        app:layout_constraintTop_toTopOf="@+id/explosion_image"
        app:srcCompat="@drawable/glock" />
</androidx.constraintlayout.widget.ConstraintLayout>